<div class="signup-body">

  <div class="sign-up-container">

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="d-flex form-inputs">
      <span><%= f.input :firstname, label: "First Name",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first name" }%></span>
      <span><%= f.input :lastname, label: "Last Name",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last name" }%></span>
    </div>


    <div class="d-flex form-inputs">
      <span><%= f.input :location, label: "Location",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Location" }%></span>
      <span><%= f.input :email, label: "e-mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%></span>
    </div>

    <%= f.input :bio, label: "Bio",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "a few words about you" }%>

    <div class="d-flex form-inputs">
      <span><%= f.input :password, label: "Password",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %></span>
      <span><%= f.input :password_confirmation, label: "Confirm",
                required: true,
                input_html: { autocomplete: "new-password" } %></span>
    </div>

     <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", class: "btn-custom-login"%>
  </div>


<% end %>


<%= render "devise/shared/links" %>

</div>
</div>
