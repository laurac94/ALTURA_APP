<div class="showpage">


<% if @plane.photo.attached?  %>
<div class="banner-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @plane.photo.key %>);">
</div>
<% else %>
<div class="banner-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "https://source.unsplash.com/random?sig=#{rand(1..1000)}&?jet" %>);">
</div>
<% end %>

<div class="content">

<div class="left">
  <h2>Premium Jet Features</h2>
  <div class="icons">
    <div class="firsticons">
    <div class="capacity">
      <%= image_tag "user.png", class: "icon", alt: "alttext" %>
      <p><%= @plane.capacity %> Passengers</p>
    </div>
    <div class="name">
      <%= image_tag "plane.png", class: "icon", alt: "alttext" %>
      <p><%= @plane.name %></p>
    </div>
    </div>
    <div class="secondicons">
      <div class="pilot">
      <%= image_tag "pilot.png", class: "icon", alt: "alttext" %>
      <p>Mr. Pilot</p>
    </div>
    <div class="location">
      <%= image_tag "pin.png", class: "icon", alt: "alttext" %>
      <p><%= @plane.location %></p>
    </div>
    </div>
  </div>
  <div class="description">
    <p><%= @plane.description %></p>
  </div>
  <div class="rate">
    <p>Hourly rate: <%= @plane.rate.to_i %>$</p>
  </div>
</div>


<% if current_user == @plane.user %>
<div class="right">
  <div class="rightcontent">
    <h2>New bookings</h2>
    <div class="user">
      <%= image_tag "laura.png", class: "avatar", alt: "alttext" %>
      <p>Laura Aunion</p>
    </div>
    <div class="message">
      <p>Hi Katy! I would like to book your jet to Beijing on the 24th at 2pm. My number is 203-393-234!</p>
    </div>
    <div class="button-green">
      <a href="#">Approve</a>
    </div>
  </div>

</div>
<% else %>
<div class="right">
  <div class="rightcontent">
    <h2>Request Booking</h2>
      <div class="calendar">
            <%= simple_form_for [@plane, @booking] do |f| %>
      <%= f.input :start, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Submit", class: "btn button-green", data: { toggle: "modal", target:"#exampleModalCenter"}  %>
    <% end %>



<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Congratu</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



        </div>
      </div>
  </div>


<% end %>

</div>
</div>



